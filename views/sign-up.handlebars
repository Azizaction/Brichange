<div class="Sign-up-container">
    <h1>Créer un compte</h1>
    <form id="Sign-up-form" novalidate>
        <input type="text" minlength="2" placeholder="Votre Nom" required>
        <input type="text" minlength="2" placeholder="Votre Prénom" required>
        <input type="email" id="email-up-form" placeholder="Votre email" required>

        
        <div class="password-container">
            <input type="password" id="password-up-form" minlength="8" placeholder="Votre mot de passe" required>
            <button type="button" id="opt-affichage" aria-label="Afficher ou masquer">👁️</button>
        </div>
        <p id="rule-1" class="rule">Doit contenir au moins huit caractères.</p>
        <p id="rule-2" class="rule">Doit contenir au moins un caractère spécial.</p>
        <p id="rule-3" class="rule">Doit contenir au moins deux chiffres.</p>

        
        <div class="password-confirm-container">
            <input type="password" id="password-up-confirm-form" minlength="8" placeholder="Confirmer mot de passe" required>
            <button type="button" id="opt-affichage-confirm" aria-label="Afficher ou masquer">👁️</button>
            <div id="status-password"></div>
        </div>

        <button type="submit"><span>Créer un compte</span></button>
    </form>
</div>
