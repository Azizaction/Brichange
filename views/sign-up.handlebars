<form id="Sign-up-form" novalidate>
    <input type="email" id="email-up-form" placeholder="Votre email" required>
    <input type="password" id="password-up-form" minlength="5" placeholder="Votre mot de passe" required>
    <button type="button" id="opt-affichage" aria-label="Afficher ou masquer"></button>
    <p id="rule-1" class="rule">Doit contenir au moins cinq caractères.</p>
    <p id="rule-2" class="rule">Doit contenir au moins un caractère spécial.</p>
    <p id="rule-3" class="rule">Doit contenir au moins deux chiffres.</p>
</form>